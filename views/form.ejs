                nameCell.innerHTML = `<input type="text" name="seminar_name_${seminarCount}" />`;
                levelCell.innerHTML = `<input type="text" name="seminar_level_${seminarCount}" />`;
                participationCell.innerHTML = `<input type="text" name="seminar_participation_${seminarCount}" />`;
                dateCell.innerHTML = `<input type="date" name="seminar_date_${seminarCount}" />`;
            }

            document.getElementById('addSeminarButton').addEventListener('click', function(event) {
                event.preventDefault();
                addSeminar();
            });



            document.getElementById('graduationForm').addEventListener('submit', (e) => {
                if (signaturePad1.isEmpty() || signaturePad2.isEmpty()) {
                    alert("Please provide both signatures first.");
                    e.preventDefault();
                } else {
                    signatureInput1.value = signaturePad1.toDataURL();
                    signatureInput2.value = signaturePad2.toDataURL();
                }
            });
        });
    </script>
    <script>
        function showRequirements() {
            const selectedProgram = document.querySelector('select[name="program"]').value;
            const requirementsSections = document.querySelectorAll('.additional-requirements');

            requirementsSections.forEach(section => {
                if (section.id === selectedProgram) {
                    section.style.display = 'block';
                } else {
                    section.style.display = 'none';
                }
            });
        }
    </script>


