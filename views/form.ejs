    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Signature Pad 1
            const canvas1 = document.getElementById('signature-pad1');
            const signaturePad1 = new SignaturePad(canvas1, {
                backgroundColor: 'rgb(255, 255, 255)', // Ensures a white background
                penColor: 'rgb(0, 0, 0)' // Sets the pen color to black
            });

            const clearButton1 = document.getElementById('clear1');
            const signatureInput1 = document.getElementById('signature1');

            clearButton1.addEventListener('click', () => {
                signaturePad1.clear();
            });

            // Signature Pad 2
            const canvas2 = document.getElementById('signature-pad2');
            const signaturePad2 = new SignaturePad(canvas2, {
                backgroundColor: 'rgb(255, 255, 255)', // Ensures a white background
                penColor: 'rgb(0, 0, 0)' // Sets the pen color to black
            });

            const clearButton2 = document.getElementById('clear2');
            const signatureInput2 = document.getElementById('signature2');

            clearButton2.addEventListener('click', () => {
                signaturePad2.clear();
            });

            let childCount = 1;
            let educationCount = 3;
            let examCount = 1;
            let employmentCount = 1;
            let publicationCount = 1;
            let awardCount = 1;
            let organizationCount = 1;
            let seminarCount = 1;

            function addChild() {
                event.preventDefault();
                var table = document.getElementById("childrenTable");
                var row = table.insertRow(-1);
                var nameCell = row.insertCell(0);
                var dobCell = row.insertCell(1);
                var sexCell = row.insertCell(2);

                childCount++;
                nameCell.innerHTML = `<input type="text" name="child_name_${childCount}" />`;
                dobCell.innerHTML = `<input type="date" name="child_dob_${childCount}" />`;
                sexCell.innerHTML = `<select name="child_sex_${childCount}"><option value="">Select Sex</option><option value="male">Male</option><option value="female">Female</option></select>`;
            }

            document.getElementById('addChildButton').addEventListener('click', function(event) {
                event.preventDefault();
                addChild();
            });

            function addEducation() {
                event.preventDefault();
                var table = document.getElementById("educationTable");
                var row = table.insertRow(-1);
                var schoolCell = row.insertCell(0);
                var degreeCell = row.insertCell(1);
                var dateCell = row.insertCell(2);
                var honorsCell = row.insertCell(3);
                var averageCell = row.insertCell(4);

                educationCount++;
                schoolCell.innerHTML = `<input type="text" name="school_name_${educationCount}" />`;
                degreeCell.innerHTML = `<input type="text" name="degree_${educationCount}" />`;
                dateCell.innerHTML = `<input type="text" name="date_${educationCount}" />`;
                honorsCell.innerHTML = `<input type="text" name="honors_${educationCount}" />`;
                averageCell.innerHTML = `<input type="text" name="average_${educationCount}" />`;
            }

            document.getElementById('addEducationButton').addEventListener('click', function(event) {
                event.preventDefault();
                addEducation();
            });

            function addExam() {
                event.preventDefault();
                var table = document.getElementById("examTable");
                var row = table.insertRow(-1);
                var examNatureCell = row.insertCell(0);
                var examDateCell = row.insertCell(1);
                var examRatingCell = row.insertCell(2);

                examCount++;
                examNatureCell.innerHTML = `<input type="text" name="exam_nature_${examCount}" />`;
                examDateCell.innerHTML = `<input type="date" name="exam_date_${examCount}" />`;
                examRatingCell.innerHTML = `<input type="text" name="exam_rating_${examCount}" />`;
            }

            document.getElementById('addExamButton').addEventListener('click', function(event) {
                event.preventDefault();
                addExam();
            });

            function addEmployment() {
                event.preventDefault();
                var table = document.getElementById("employmentTable");
                var row = table.insertRow(-1);
                var companyCell = row.insertCell(0);
                var addressCell = row.insertCell(1);
                var positionCell = row.insertCell(2);
                var datesCell = row.insertCell(3);
                var workCell = row.insertCell(4);

                employmentCount++;
                companyCell.innerHTML = `<input type="text" name="employment_company_${employmentCount}" />`;
                addressCell.innerHTML = `<input type="text" name="employment_address_${employmentCount}" />`;
                positionCell.innerHTML = `<input type="text" name="employment_position_${employmentCount}" />`;
                datesCell.innerHTML = `<input type="text" name="employment_dates_${employmentCount}" />`;
                workCell.innerHTML = `<input type="text" name="employment_work_${employmentCount}" />`;
            }

            document.getElementById('addEmploymentButton').addEventListener('click', function(event) {
                event.preventDefault();
                addEmployment();
            });

            function addPublication() {
                event.preventDefault();
                var table = document.getElementById("publicationTable");
                var row = table.insertRow(-1);
                var titleCell = row.insertCell(0);
                var placeCell = row.insertCell(1);
                var classificationCell = row.insertCell(2);

                publicationCount++;
                titleCell.innerHTML = `<input type="text" name="publication_title_${publicationCount}" />`;
                placeCell.innerHTML = `<input type="text" name="publication_place_${publicationCount}" />`;
                classificationCell.innerHTML = `<input type="text" name="publication_classification_${publicationCount}" />`;
            }

            document.getElementById('addPublicationButton').addEventListener('click', function(event) {
                event.preventDefault();
                addPublication();
            });

            function addAward() {
                event.preventDefault();
                var table = document.getElementById("awardTable");
                var row = table.insertRow(-1);
                var titleCell = row.insertCell(0);
                var sourceCell = row.insertCell(1);
                var classificationCell = row.insertCell(2);

                awardCount++;
                titleCell.innerHTML = `<input type="text" name="award_title_${awardCount}" />`;
                sourceCell.innerHTML = `<input type="text" name="award_source_${awardCount}" />`;
                classificationCell.innerHTML = `<input type="text" name="award_classification_${awardCount}" />`;
            }

            document.getElementById('addAwardButton').addEventListener('click', function(event) {
                event.preventDefault();
                addAward();
            });

            function addOrganization() {
                event.preventDefault();
                var table = document.getElementById("organizationTable");
                var row = table.insertRow(-1);
                var nameCell = row.insertCell(0);
                var positionCell = row.insertCell(1);
                var accomplishmentsCell = row.insertCell(2);

                organizationCount++;
                nameCell.innerHTML = `<input type="text" name="organization_name_${organizationCount}" />`;
                positionCell.innerHTML = `<input type="text" name="organization_position_${organizationCount}" />`;
                accomplishmentsCell.innerHTML = `<input type="text" name="organization_accomplishments_${organizationCount}" />`;
            }

            document.getElementById('addOrganizationButton').addEventListener('click', function(event) {
                event.preventDefault();
                addOrganization();
            });

            function addSeminar() {
                event.preventDefault();
                var table = document.getElementById("seminarTable");
                var row = table.insertRow(-1);
                var nameCell = row.insertCell(0);
                var levelCell = row.insertCell(1);
                var participationCell = row.insertCell(2);
                var dateCell = row.insertCell(3);

